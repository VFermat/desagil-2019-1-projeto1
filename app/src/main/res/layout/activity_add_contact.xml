<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorListItem"
    tools:context=".AddContact">
    <Button
        android:id="@+id/addContact_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="10dp"
        android:layout_weight="3"
        android:background="@drawable/oval_button"
        android:backgroundTint="@color/colorButtons"
        android:text="ADD"
        android:textSize="25dp"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:layout_weight="3"
        android:background="@drawable/oval_button"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="25dp"
        android:textColor="#FFFFFF"
        android:text="DEL"
        android:backgroundTint="@color/colorButtons"
        android:background="@drawable/oval_button"
        android:textSize="25dp"/>
    <Button

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/up_button_contact"/>
    <Button
        android:id="@+id/downContactM_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/down_button_contact"/>
    <EditText
        android:id="@+id/contactName_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nome"
        android:textColorHint="#808080"/>
    <EditText
        android:id="@+id/contactPhone_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="phone"
        android:hint="NÃºmero"
        android:textColorHint="#808080"/>
</RelativeLayout>